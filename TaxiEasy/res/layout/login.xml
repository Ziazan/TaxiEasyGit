<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
   android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   android:paddingBottom="@dimen/activity_vertical_margin"
   android:background="@drawable/login_bg"
     >

   <ImageView
       android:id="@+id/login_imagebutton_account"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/Login_text"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="58dp"
       android:src="@drawable/edit_border" />
   <EditText
       android:id="@+id/login_account"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/login_imagebutton_account"
       android:layout_centerHorizontal="true"
       android:gravity="center"
       android:layout_marginBottom="18dp"
       android:background="#00000000"
       android:ems="10"
       android:textColor="#ffffff"
       android:hint="Account"
       android:textColorHint="#bbbbbb" >

       <requestFocus />
   </EditText>

  <EditText
      android:id="@+id/login_password"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:password="true"
      android:gravity="center"
      android:layout_alignBottom="@+id/login_imagebutton_password"
      android:layout_alignLeft="@+id/login_account"
      android:layout_marginBottom="18dp"
      android:background="#00000000"
      android:textColor="#ffffff"
      android:ems="10"
      android:hint="Password"
      android:textColorHint="#bbbbbb" />

  <ImageView
      android:id="@+id/login_imagebutton_password"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/login_imagebutton_account"
      android:layout_below="@+id/login_imagebutton_account"
      android:src="@drawable/edit_border" />

  <Button
      android:id="@+id/login_confirm"
      android:layout_width="270dp"
      android:layout_height="30dp"
      android:layout_below="@+id/login_password"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="80dp"
      android:background="@drawable/btn_border"
      android:text="@string/login"
      android:textColor="#fefbf6"
      android:textSize="20dp" />

<TextView
    android:id="@+id/Login_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="39dp"
    android:text="TaxiEasy"
    android:textColor="#ffffff"
    android:textSize="35dp" />

<Button
    android:id="@+id/login_register"
    android:layout_width="270dp"
    android:layout_height="30dp"
    android:layout_alignLeft="@+id/login_confirm"
    android:layout_below="@+id/login_confirm"
    android:layout_marginTop="40dp"
    android:background="@drawable/btn_border"
    android:text="@string/register"
    android:textColor="#e9efc9"
    android:textSize="20dp" />

</RelativeLayout>