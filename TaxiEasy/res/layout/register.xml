<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
   android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   android:paddingBottom="@dimen/activity_vertical_margin"
   android:background="@drawable/login_bg"
     >
 <TextView
    android:id="@+id/register_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="39dp"
    android:text="TaxiEasy"
    android:textColor="#ffffff"
    android:textSize="35dp" />
<ImageView
       android:id="@+id/register_imagebutton_account"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/register_text"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="58dp"
       android:src="@drawable/edit_border" />
 <EditText
       android:id="@+id/register_account"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/register_imagebutton_account"
       android:layout_centerHorizontal="true"
       android:gravity="center"
       android:layout_marginBottom="18dp"
       android:background="#00000000"
       android:ems="10"
       android:textColor="#ffffff"
       android:hint="Account"
       android:textColorHint="#bbbbbb" >

       <requestFocus />
   </EditText>
   <Button
      android:id="@+id/register_confirm"
      android:layout_width="270dp"
      android:layout_height="30dp"
      android:layout_below="@+id/register_password"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="80dp"
      android:background="@drawable/btn_border"
      android:text="@string/register"
      android:textColor="#fefbf6"
      android:textSize="20dp" />
   <EditText
      android:id="@+id/register_password"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:password="true"
      android:gravity="center"
      android:layout_alignBottom="@+id/register_imagebutton_password"
      android:layout_alignLeft="@+id/register_account"
      android:layout_marginBottom="18dp"
      android:background="#00000000"
      android:textColor="#ffffff"
      android:ems="10"
      android:hint="Password"
      android:textColorHint="#bbbbbb" />
   <ImageView
      android:id="@+id/register_imagebutton_password"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/register_imagebutton_account"
      android:layout_below="@+id/register_imagebutton_account"
      android:src="@drawable/edit_border" />
</RelativeLayout>
